{ 
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true,
    "paths": {
      "svg/*": ["./assets/svg/*"],
      "assets/*": ["./assets/*"],
      "appConfig": ["./config.json"],
      "hooks/*": ["./src/hooks/*"],
      "services/*": ["./src/services/*"],
      "declarations": ["./app-declarations.d.ts"],
      "types/*": ["./src/types/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "./app-declarations.d.ts"  
  ],
}
